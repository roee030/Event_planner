<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EventCreationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Set a new Event!"
            android:textSize="35dp" />

        <android.support.design.widget.TextInputLayout

            android:id="@+id/event_name_continer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="top"
                android:hint="Event Name"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="1"
                android:maxLines="2" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/event_Loc_continer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/eventLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="top"
                android:hint="Event Location"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="1"
                android:maxLines="2" />
        </android.support.design.widget.TextInputLayout>


        <EditText
            android:id="@+id/eventDate"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Double click here to set Date" />

        <EditText
            android:id="@+id/eventTime"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Double click to set Time"
            android:inputType="none" />


        <EditText
            android:id="@+id/eventBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set individual product budget"
            android:inputType="number" />
        <TextView
            android:id="@+id/eventProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click here to set Products"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <android.support.design.widget.TextInputLayout

            android:id="@+id/event_about_continer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/event_about_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Tell us about your event!"
                android:inputType="textMultiLine|textCapSentences"
                android:lines="5"
                android:maxLines="5" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="continue" />

    </LinearLayout>
</ScrollView>